<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/almost_transparent"
    android:clickable="true"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:focusable="true">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_right"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_left"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_selector"
        android:clickable="true"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:elevation="@dimen/elevation"
        android:focusable="true"
        android:paddingVertical="@dimen/margin_padding_xlarge"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/gl_left"
        app:layout_constraintRight_toRightOf="@id/gl_right"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_right2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_left2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="@id/gl_left2"
            app:layout_constraintRight_toRightOf="@id/gl_right2"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                style="@style/BigTextView_Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/margin_padding_xlarge"
                android:fontFamily="@font/text"
                android:gravity="center"
                android:text="@string/wanna_guess"
                android:textAllCaps="true"
                android:textSize="28sp" />

            <LinearLayout
                android:id="@+id/btn_year_single"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_padding_large"
                android:background="@drawable/bg_button"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:elevation="@dimen/elevation"
                android:orientation="vertical"
                android:paddingVertical="@dimen/margin_padding_medium">

                <TextView
                    style="@style/MediumTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/guess_year"
                    android:textAllCaps="true"
                    tools:ignore="AllCaps" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.75dp"
                    android:layout_marginHorizontal="@dimen/margin_padding_xxlarge"
                    android:layout_marginVertical="@dimen/margin_padding_xsmall"
                    android:background="@color/black" />

                <TextView
                    style="@style/MediumTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawablePadding="@dimen/margin_padding_xxxsmall"
                    android:gravity="center"
                    android:text="@string/single_mode"
                    android:textAllCaps="true"
                    app:drawableStartCompat="@drawable/ic_single_player" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_year_multiplayer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_padding_xlarge"
                android:background="@drawable/bg_button"
                android:elevation="@dimen/elevation"
                android:orientation="vertical"
                android:paddingVertical="@dimen/margin_padding_medium">

                <TextView
                    style="@style/MediumTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/guess_year"
                    android:textAllCaps="true"
                    tools:ignore="AllCaps" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.75dp"
                    android:layout_marginHorizontal="@dimen/margin_padding_xxlarge"
                    android:layout_marginVertical="@dimen/margin_padding_xsmall"
                    android:background="@color/black" />

                <TextView
                    style="@style/MediumTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawablePadding="@dimen/margin_padding_xsmall"
                    android:gravity="center"
                    android:text="@string/multiplayer_mode"
                    android:textAllCaps="true"
                    app:drawableStartCompat="@drawable/ic_multiplayer" />

            </LinearLayout>

            <TextView
                style="@style/MediumTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/margin_padding_xxsmall"
                android:background="@drawable/bg_button"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:elevation="@dimen/elevation"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingVertical="@dimen/margin_padding_medium"
                android:text="@string/guess_title"
                android:textAllCaps="true"
                tools:ignore="AllCaps" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>