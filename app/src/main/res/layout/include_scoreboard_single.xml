<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_single_score_board"
    android:elevation="@dimen/elevation"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/margin_padding_large"
    android:paddingVertical="@dimen/margin_padding_xsmall">

    <TextView
        android:id="@+id/good_score"
        style="@style/BigTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/margin_padding_xxxsmall"
        android:fontFamily="@font/text"
        android:text="@string/dashboard_zero"
        android:textColor="@color/black" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_good"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/margin_padding_small"
        app:lottie_autoPlay="true"
        app:lottie_colorFilter="@color/good_result"
        app:lottie_fileName="result.json" />

    <TextView
        android:id="@+id/almost_score"
        style="@style/BigTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/margin_padding_xxxsmall"
        android:fontFamily="@font/text"
        android:text="@string/dashboard_zero"
        android:textColor="@color/black" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_almost"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/margin_padding_small"
        app:lottie_autoPlay="true"
        app:lottie_colorFilter="@color/almost_good_result"
        app:lottie_fileName="result.json" />

    <TextView
        android:id="@+id/bad_score"
        style="@style/BigTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/margin_padding_xxxsmall"
        android:fontFamily="@font/text"
        android:text="@string/dashboard_zero"
        android:textColor="@color/black" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_bad"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:lottie_autoPlay="true"
        app:lottie_colorFilter="@color/bad_result"
        app:lottie_fileName="result.json" />

</LinearLayout>