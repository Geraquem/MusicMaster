<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_padding_medium"
    android:background="@drawable/bg_category"
    android:elevation="@dimen/margin_padding_small"
    android:orientation="vertical"
    android:padding="@dimen/margin_padding_xmedium">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_padding_xsmall"
        android:orientation="horizontal"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/margin_padding_gigant"
            android:layout_height="@dimen/margin_padding_gigant"
            android:layout_gravity="start"
            android:layout_marginEnd="@dimen/margin_padding_small"
            android:contentDescription="@string/content_description"
            tools:src="@drawable/ic_next" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/BigTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAllCaps="true"
            tools:text="ROCK" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/margin_padding_xxsmall"
        android:background="@color/black" />

    <TextView
        android:id="@+id/tv_description"
        style="@style/MediumTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey"
        tools:text="Bla bla bla bla bla bla" />

</LinearLayout>