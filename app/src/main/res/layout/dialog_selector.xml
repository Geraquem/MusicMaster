<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_selector"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/margin_padding_large">

    <TextView
        style="@style/BigTextView_Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_padding_small"
        android:layout_marginBottom="@dimen/margin_padding_large"
        android:fontFamily="@font/text"
        android:gravity="center"
        android:text="@string/selector_wanna_guess"
        android:textAllCaps="true" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_year_single"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_padding_xlarge"
        android:background="@drawable/bg_button"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:elevation="@dimen/elevation"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/margin_padding_xmedium"
        android:paddingVertical="@dimen/margin_padding_medium">

        <TextView
            android:id="@+id/tv_year_title"
            style="@style/MediumTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/margin_padding_small"
            android:text="@string/selector_guess_year"
            android:textAllCaps="true"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="@id/iv_year_play"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/iv_year_play"
            app:layout_constraintTop_toTopOf="@id/iv_year_play"
            tools:ignore="AllCaps" />

        <ImageView
            android:id="@+id/iv_year_play"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:contentDescription="@string/content_description"
            android:scaleX="-1"
            android:scaleY="-1"
            android:src="@drawable/ic_play_selector"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_year_description"
            style="@style/SmallTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_padding_small"
            android:text="@string/selector_guess_year_single_description"
            android:textColor="@color/grey"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_year_play" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_year_description">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/tab_background"
                app:tabIndicator="@drawable/tab_selected"
                app:tabIndicatorColor="@color/white"
                app:tabIndicatorGravity="stretch"
                app:tabMode="fixed"
                app:tabPadding="@dimen/margin_padding_small"
                app:tabPaddingEnd="@dimen/margin_padding_small"
                app:tabRippleColor="@null"
                app:tabSelectedTextColor="@color/black"
                app:tabTextAppearance="@style/selector_tab_text"
                app:tabTextColor="@color/white" />

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_padding_xlarge"
        android:background="@drawable/bg_button"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:elevation="@dimen/elevation"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/margin_padding_xmedium"
        android:paddingVertical="@dimen/margin_padding_medium">

        <TextView
            android:id="@+id/tv_title_title"
            style="@style/MediumTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/margin_padding_small"
            android:text="@string/selector_guess_title"
            android:textAllCaps="true"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="@id/iv_title_play"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/iv_title_play"
            app:layout_constraintTop_toTopOf="@id/iv_title_play"
            tools:ignore="AllCaps" />

        <ImageView
            android:id="@+id/iv_title_play"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:contentDescription="@string/content_description"
            android:scaleX="-1"
            android:scaleY="-1"
            android:src="@drawable/ic_play_selector"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            style="@style/SmallTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_padding_small"
            android:text="@string/selector_guess_title_description"
            android:textColor="@color/grey"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_title_play" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
