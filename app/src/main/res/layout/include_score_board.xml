<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_puntuacion"
    android:elevation="5dp"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingHorizontal="24dp"
    android:layout_marginHorizontal="15dp"
    android:paddingVertical="6dp">

    <TextView
        android:id="@+id/goodScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:fontFamily="@font/text"
        android:text="@string/zero"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieGood"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginEnd="24dp"
        app:lottie_autoPlay="true"
        app:lottie_colorFilter="@color/goodPhrase"
        app:lottie_rawRes="@raw/result" />

    <TextView
        android:id="@+id/almostScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:fontFamily="@font/text"
        android:text="@string/zero"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAlmost"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginEnd="24dp"
        app:lottie_autoPlay="true"
        app:lottie_colorFilter="@color/almostPhrase"
        app:lottie_rawRes="@raw/result" />

    <TextView
        android:id="@+id/badScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="2dp"
        android:fontFamily="@font/text"
        android:text="@string/zero"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieBad"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:lottie_autoPlay="true"
        app:lottie_colorFilter="@color/badPhrase"
        app:lottie_rawRes="@raw/result" />

</LinearLayout>